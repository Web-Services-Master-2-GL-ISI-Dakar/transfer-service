<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity ProcessedEvent for Kafka event idempotency.
    -->
    <changeSet id="20260103200000-1" author="jhipster">
        <createTable tableName="processed_events">
            <column name="event_id" type="varchar(100)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="event_type" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
            <column name="processed_at" type="${datetimeType}">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Index for faster lookups -->
        <createIndex indexName="idx_processed_events_event_type" tableName="processed_events">
            <column name="event_type"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
