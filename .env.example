# ============================================
# TRANSACTION ENGINE SERVICE - Environment Variables Example
# ============================================
# Copiez ce fichier en .env et remplissez les valeurs

# ============================================
# APPLICATION
# ============================================
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8082

# ============================================
# JHIPSTER REGISTRY
# ============================================
JHIPSTER_REGISTRY_URL=http://jhipster-registry:8761
JHIPSTER_REGISTRY_PASSWORD=admin

# ============================================
# DATABASE (PostgreSQL)
# ============================================
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_DATABASE=ondmoneyTransactionEngine
POSTGRESQL_USERNAME=ondmoneyTransactionEngine
POSTGRESQL_PASSWORD=your_secure_password_here
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/ondmoneyTransactionEngine

# ============================================
# KAFKA (depuis la Gateway)
# ============================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_PRODUCER_GROUP_ID=transaction-engine-producer
KAFKA_TOPICS_TRANSACTION_CREATED=transaction-created
KAFKA_TOPICS_TRANSACTION_COMPLETED=transaction-completed

# ============================================
# KEYCLOAK (OAuth2 - depuis la Gateway)
# ============================================
KEYCLOAK_URL=http://localhost:9080
KEYCLOAK_REALM=jhipster
SPRING_SECURITY_OAUTH2_CLIENT_PROVIDER_OIDC_ISSUER_URI=http://localhost:9080/realms/jhipster

# ============================================
# HAZELCAST (Cache distribué)
# ============================================
HAZELCAST_CLUSTER_NAME=ondmoney-txe
HAZELCAST_NETWORK_PORT=5701

# ============================================
# REDIS (Optional - si utilisé pour le cache)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URI=redis://localhost:6379

# ============================================
# MONITORING (Optional)
# ============================================
ZIPKIN_URL=http://localhost:9411
PROMETHEUS_ENABLED=true

# ============================================
# LOGGING
# ============================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=INFO

# ============================================
# LIQUIBASE (Migration de base de données)
# ============================================
LIQUIBASE_CONTEXTS=prod
LIQUIBASE_ENABLED=true

# ============================================
# DOCKER / DEPLOYMENT
# ============================================
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_NAME=ondmoney/transaction-engine-service
DOCKER_IMAGE_TAG=latest

# ============================================
# KUBERNETES
# ============================================
K8S_NAMESPACE=ondmoney
